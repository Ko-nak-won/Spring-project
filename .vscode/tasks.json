{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üêò Docker PostgreSQL",
            "type": "shell",
            "command": "docker-compose up -d",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "üêç FastAPI Server",
            "type": "shell",
            "command": ".\\venv\\Scripts\\activate; uvicorn main:app --reload --port 8000",
            "options": {
                "cwd": "${workspaceFolder}/analysis-server"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Uvicorn running.*$",
                    "endsPattern": "^.*Application startup complete.*$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "servers"
            }
        },
        {
            "label": "‚òï Spring Boot Server",
            "type": "shell",
            "command": ".\\gradlew.bat bootRun",
            "options": {
                "cwd": "${workspaceFolder}/ds"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*Started.*$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "servers"
            },
            "dependsOn": ["üêò Docker PostgreSQL"]
        },
        {
            "label": "‚öõÔ∏è React Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/ds-project"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*VITE.*$",
                    "endsPattern": "^.*ready in.*$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "servers"
            }
        },
        {
            "label": "üöÄ Start All Services",
            "dependsOn": [
                "üêò Docker PostgreSQL",
                "üêç FastAPI Server",
                "‚òï Spring Boot Server",
                "‚öõÔ∏è React Dev Server"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üõë Stop All Docker",
            "type": "shell",
            "command": "docker-compose down",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}